<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<org.sketchertab.Surface android:id="@+id/surface"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            >
        <LinearLayout
                android:id="@+id/brush_toolbar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="6dip"
                >
            <ImageButton
                    android:id="@+id/brush_sketchy"
                    style="@style/brush_buttom"
                    android:src="@drawable/brush_sketchy_button"
                    />
            <ImageButton
                    android:id="@+id/brush_shaded"
                    style="@style/brush_buttom"
                    android:src="@drawable/brush_shaded_button"
                    />
             <ImageButton
                    android:id="@+id/brush_fur"
                    style="@style/brush_buttom"
                    android:src="@drawable/brush_fur_button"
                    />
            <ImageButton
                    android:id="@+id/brush_web"
                    style="@style/brush_buttom"
                    android:src="@drawable/brush_chrome_button"
                    />
			<ImageButton
                    android:id="@+id/brush_circles"
                    style="@style/brush_buttom"
                    android:src="@drawable/brush_circles_button"
                    />
            <ImageButton
                   android:id="@+id/brush_ribbon"
                   style="@style/brush_buttom"
                   android:src="@drawable/brush_ribbon_button"
                   />
            <ImageButton
                   android:id="@+id/brush_simple"
                   style="@style/brush_buttom"
                   android:src="@drawable/brush_simple_button"
                   />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
        <LinearLayout
                android:id="@+id/brush_property"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                >
            <ImageView
                    android:id="@+id/foreground_picker_button"
                    android:layout_height="50dip"
                    android:layout_width="50dip"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/button_background"
                    />
            <ImageView
                    android:id="@+id/background_picker_button"
                    android:layout_height="50dip"
                    android:layout_width="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/button_background"
                    />
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="150dip"
                    android:orientation="vertical"
                    android:layout_marginTop="15dip"
                    android:paddingLeft="6dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:background="@color/brush_property_bg"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opacity"
                        />
                <SeekBar
                        android:id="@+id/brush_opacity_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/size"
                        />
                <SeekBar
                        android:id="@+id/brush_size_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            >
        <ImageView
                android:id="@+id/menu_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_switcher_button"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
    </LinearLayout>



</FrameLayout>