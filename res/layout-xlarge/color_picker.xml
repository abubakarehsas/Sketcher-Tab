<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
    android:layout_height="fill_parent"
	android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dip"
        >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
            >

		<org.sketchertab.colorpicker.SatValPicker
			android:id="@+id/satval_picker"
			android:layout_width="400dp"
			android:layout_height="400dp"
			/>

		<org.sketchertab.colorpicker.HuePicker
			android:id="@+id/hue_picker"
			android:layout_width="60dp"
			android:layout_height="400dp" />
	</LinearLayout>

	<org.sketchertab.colorpicker.PreviewView
		android:id="@+id/preview_new"
        android:layout_width="140dp"
		android:layout_height="50dp"
		android:background="@drawable/backrepeat"
        android:layout_margin="5dp"
            />

	<LinearLayout
		style="?android:attr/buttonBarButtonStyle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">
		<Button android:id="@+id/picker_button_accept"
				style="?android:attr/buttonBarButtonStyle"
			android:layout_weight="1.0" android:layout_width="0dip"
			android:layout_height="wrap_content" android:text="@string/accept" />
		<Button android:id="@+id/picker_button_cancel"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_weight="1.0"
				android:layout_width="0dip"
			android:layout_height="wrap_content" android:text="@string/cancel" />
	</LinearLayout>

</LinearLayout>
